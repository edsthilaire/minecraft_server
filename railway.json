{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "java -Xmx1G -Xms1G -XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200 -jar /minecraft/server.jar nogui",
    "restartPolicy": "always",
    "healthchecks": {
      "tcp": {
        "port": 25565
      }
    }
  }
}
